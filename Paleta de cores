<body>
  <h1>Gerador de Paleta de Cores</h1>
  <div class="palette" id="palette">
    <!-- Blocos de cor serão inseridos aqui -->
  </div>
  <button onclick="gerarCores()">Girar</button>

  <script>
    const palette = document.getElementById('palette');

    // Função para gerar cor hexadecimal aleatória
    function gerarCorHex() {
      const letras = '0123456789ABCDEF';
      let cor = '#';
      for (let i = 0; i < 6; i++) {
        cor += letras[Math.floor(Math.random() * 16)];
      }
      return cor;
    }

    // Gera 5 cores e aplica nos blocos
    function gerarCores() {
      palette.innerHTML = ''; // Limpa os blocos
      for (let i = 0; i < 5; i++) {
        const cor = gerarCorHex();
        const bloco = document.createElement('div');
        bloco.className = 'color-block';
        bloco.style.backgroundColor = cor;
        bloco.innerText = cor;
        palette.appendChild(bloco);
      }
    }

    // Geração inicial
    gerarCores();

    // Detecta tecla de espaço para regenerar cores
    document.addEventListener('keydown', function(e) {
      if (e.code === 'Space') {
        e.preventDefault(); // Evita rolagem da página
        gerarCores();
      }
    });
  </script>
</body>
</html>
